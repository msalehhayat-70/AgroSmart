<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.agrosmart">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.location.gps"
        tools:ignore="UnnecessaryRequiredFeature" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/er"
        android:label="@string/app_name"
        android:roundIcon="@drawable/er"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".view.introscreen.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Intro Screen (Optional) -->
        <activity
            android:name=".view.introscreen.IntroActivity"
            android:exported="false"
            android:theme="@style/AppTheme2" />

        <!-- Login Screen -->
        <activity
            android:name=".view.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/AppTheme2" />

        <!-- Signup Screen -->
        <activity
            android:name=".view.auth.SignupActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/AppTheme2" />

        <!-- Dashboard -->
        <activity
            android:name=".view.dashboard.DashboardActivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity
            android:name=".view.profile.ProfileActivity"
            android:exported="false" />

        <!-- RazorPay Screen -->
        <activity
            android:name=".view.ecommerce.RazorPayActivity"
            android:exported="false" />

        <!-- Meta Data -->
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="@string/key_id" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
