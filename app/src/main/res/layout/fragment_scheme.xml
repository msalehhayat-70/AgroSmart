<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.scheme.SchemeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".schemeMain"
        tools:ignore="RedundantNamespace">

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressScheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminateDrawable="@drawable/progress_background"
            android:elevation="12dp"
            android:layout_height="wrap_content"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/schemeImage"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:src="@color/secondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/schemeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="14dp"
                    android:layout_marginBottom="7dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/loading"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schemeImage" />

                <TextView
                    android:id="@+id/schemeDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="7dp"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="5"
                    android:text="@string/loading"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schemeTitle"
                    tools:ignore="UnusedAttribute" />

                <View
                    android:id="@+id/hr1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="7dp"
                    android:background="@color/secondary"
                    app:layout_constraintTop_toBottomOf="@id/schemeDesc" />

                <ImageView
                    android:id="@+id/schemeDateIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="14dp"
                    android:layout_marginStart="14dp"
                    android:src="@drawable/c2"
                    app:layout_constraintEnd_toEndOf="@id/schemeDate"
                    app:layout_constraintStart_toStartOf="@id/schemeDate"
                    app:layout_constraintTop_toBottomOf="@id/hr1"
                    app:tint="@color/colorPrimary"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/schemeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:text="@string/loading"
                    app:layout_constraintEnd_toStartOf="@id/schemeLaunchedBy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schemeDateIcon" />

                <ImageView
                    android:id="@+id/schemeBudgetIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="14dp"
                    android:layout_marginEnd="14dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/budget"
                    app:layout_constraintEnd_toEndOf="@id/schemeBudget"
                    app:layout_constraintStart_toStartOf="@id/schemeBudget"
                    app:layout_constraintTop_toBottomOf="@id/hr1"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/schemeBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:text="@string/loading"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/schemeLaunchedBy"
                    app:layout_constraintTop_toBottomOf="@id/schemeBudgetIcon" />

                <ImageView
                    android:id="@+id/launchedByIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginVertical="14dp"
                    android:src="@drawable/c2"
                    app:layout_constraintEnd_toEndOf="@id/schemeLaunchedBy"
                    app:layout_constraintStart_toStartOf="@id/schemeLaunchedBy"
                    app:layout_constraintTop_toBottomOf="@id/hr1"
                    app:tint="@color/colorPrimary"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/schemeLaunchedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="7dp"
                    android:text="@string/loading"
                    app:layout_constraintEnd_toStartOf="@id/schemeBudget"
                    app:layout_constraintStart_toEndOf="@id/schemeDate"
                    app:layout_constraintTop_toBottomOf="@id/launchedByIcon" />

                <View
                    android:id="@+id/hr2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="7dp"
                    android:background="@color/secondary"
                    app:layout_constraintTop_toBottomOf="@id/schemeDate" />

                <TextView
                    android:id="@+id/eligibilityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="14dp"
                    android:layout_marginStart="14dp"
                    android:text="Eligibility Criteria:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hr2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/schemeEligibility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="7dp"
                    android:gravity="fill_horizontal"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/loading"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eligibilityTitle"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/documentsRequiredTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="14dp"
                    android:text="Required Documents:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schemeEligibility"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/schemeDocumentsRequired"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="7dp"
                    android:gravity="fill_horizontal"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/loading"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/documentsRequiredTitle"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/objectivesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="14dp"
                    android:text="Objectives:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schemeDocumentsRequired"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/schemeObjectives"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="7dp"
                    android:gravity="fill_horizontal"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/loading"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/objectivesTitle"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/moreInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="14dp"
                    android:text="Website:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schemeObjectives"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/schemeWebsite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginBottom="14dp"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:autoLink="web"
                    android:text="@string/loading"
                    android:textColor="@color/fontColor"
                    android:textColorLink="@color/fontColor"
                    app:layout_constraintStart_toEndOf="@id/moreInfoTitle"
                    app:layout_constraintTop_toTopOf="@id/moreInfoTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>